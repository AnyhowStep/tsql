{
    "compilerOptions": {
        "sourceMap": true,


        "experimentalDecorators": true,

        "allowJs": false,

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,

        "newLine": "lf",

        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,

        "strict": true,
        "strictNullChecks": true,

        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react",
        "jsxFactory": "h"
    },
    "compileOnSave": false,

    "include": [
        "./runner.ts",
        "./accept-actual.ts",
        "./accept-one.ts",
        "./interactive.ts",
        "./util.ts"
    ]
}
