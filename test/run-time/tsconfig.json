{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,


        "experimentalDecorators": true,

        "allowJs": false,

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,

        "newLine": "lf",

        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noErrorTruncation": true,

        "strict": true,

        "module": "commonjs",
        "moduleResolution": "node",
        "target": "esnext",
        "jsx": "react",
        "jsxFactory": "h"
    },
    "compileOnSave": false,

    "include": [
        "./bigint-polyfill.ts",
        "./bluebird-promise.ts",
        "./run-time-test-imports.ts",
        "./runner.ts",
        "./input/**/*"
    ]
}
